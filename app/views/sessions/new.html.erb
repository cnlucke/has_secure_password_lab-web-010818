<h1>Login</h1>
<% if flash[:notice] %>
<strong style="color: red;"><%= flash[:notice] %></strong>
<% end %>
<%= form_for :user, url: '/login' do |f| %>
  <p>Name: <%= f.text_field :name %></p>
  <p>Password: <%= f.password_field :password %></p>
  <p>Password: <%= f.password_field :password_confirmation %></p>
  <%= f.submit "Submit" %>
<% end %>
